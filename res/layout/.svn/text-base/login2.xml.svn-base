<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ablogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_w2"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/username"
        android:layout_width="269dp"
        android:layout_height="35dp"
        android:layout_x="28dp"
        android:layout_y="166dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/usernamehint" />

    <EditText
        android:id="@+id/password"
        android:layout_width="272dp"
        android:layout_height="30dp"
        android:layout_x="27dp"
        android:layout_y="237dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="@string/passwordhint"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signin"
        android:layout_width="158dp"
        android:layout_height="48dp"
        android:layout_x="82dp"
        android:layout_y="289dp"
        android:background="@android:color/transparent"
        android:text="signIn" />

    <Button
        android:id="@+id/register"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_x="66dp"
        android:layout_y="352dp"
        android:background="@android:color/transparent"
        android:text="register" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="79dp"
        android:layout_height="38dp"
        android:layout_x="213dp"
        android:layout_y="353dp"
        android:background="@android:color/transparent"
        android:text="reset" />

    <Button
        android:id="@+id/credits"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_x="134dp"
        android:layout_y="396dp"
        android:background="@android:color/transparent"
        android:text="@string/credits"
        android:textSize="20dp"
        android:textStyle="bold" />

</AbsoluteLayout>