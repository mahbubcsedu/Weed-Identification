<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/custom_border"
    android:orientation="vertical" >

    <!--
         <ImageView
        android:id="@+id/selectedImage"
        android:layout_width="180dp"
        android:layout_height="120dp"               
        android:layout_marginLeft="55dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/image_frame" />
    -->

    <Gallery
        android:id="@+id/pre_diag_gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvRecAudEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record Voice Comments:" >
        </TextView>

        <Chronometer
            android:id="@+id/chronometerEx"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:format="@string/chronometer_initial_format"
            android:paddingBottom="1dip"
            android:paddingLeft="10dip"
            android:paddingTop="1dip"
            android:textColor="#5b222b" />
    </LinearLayout>

    <LinearLayout
        style="@style/btnStyleBeige"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <ImageButton
            android:id="@+id/btnStartEx"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/btn_recorder_enable" />

        <ImageButton
            android:id="@+id/btnResetEx"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/btn_reset_disable" />

        <ImageButton
            android:id="@+id/btnStopEx"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/btn_media_stop_disable" />

      
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvEx"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="Comments" >
        </TextView>

        <EditText
            android:id="@+id/txtCommentsEx"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:scrollHorizontally="true" >
        </EditText>

        <Button
            android:id="@+id/sendEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:paddingRight="10dp"
            android:text="submit" >
        </Button>
    </LinearLayout>

</LinearLayout>